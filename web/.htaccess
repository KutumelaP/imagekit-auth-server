# Fix MIME types for Firebase service workers
<Files "firebase-messaging-sw.js">
    AddType application/javascript .js
</Files>

# Fix MIME types for web workers
<FilesMatch "\.(js)$">
    Header set Content-Type "application/javascript"
</FilesMatch>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# SPA routing and API proxy rules
<IfModule mod_rewrite.c>
    RewriteEngine On

    # API proxies to Cloud Functions (mask backend under your domain)
    RewriteRule ^api/payfastReturn$ https://us-central1-marketplace-8d6bd.cloudfunctions.net/payfastReturn [P,L]
    RewriteRule ^api/payfastCancel$ https://us-central1-marketplace-8d6bd.cloudfunctions.net/payfastCancel [P,L]
    RewriteRule ^api/payfastNotify$ https://us-central1-marketplace-8d6bd.cloudfunctions.net/payfastNotify [P,L]
    RewriteRule ^api/payfastFormRedirect$ https://us-central1-marketplace-8d6bd.cloudfunctions.net/payfastFormRedirect [P,L]

    # SPA: send non-file routes to index.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.html [QSA,L]
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>
