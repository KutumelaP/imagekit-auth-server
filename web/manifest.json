{
    "name": "Mzansi Marketplace",
    "short_name": "Mzansi",
    "start_url": ".",
    "display": "standalone",
    "background_color": "#1F4654",
    "theme_color": "#1F4654",
    "description": "Your local food and goods marketplace - Buy and sell locally across South Africa",
    "orientation": "portrait-primary",
    "prefer_related_applications": false,
    "scope": "/",
    "lang": "en-ZA",
    "categories": ["shopping", "food", "marketplace", "business", "lifestyle"],
    "display_override": ["standalone", "minimal-ui", "browser"],
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "id": "mzansi-marketplace-pwa",
    "edge_side_panel": {
        "preferred_width": 400
    },
    "handle_links": "preferred",
    "capture_links": "existing-client-navigate",
    "icons": [
        {
            "src": "icons/Icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "icons/Icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "icons/Icon-maskable-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icons/Icon-maskable-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "shortcuts": [
        {
            "name": "Browse Products",
            "short_name": "Browse",
            "description": "Browse all products",
            "url": "/?source=pwa",
            "icons": [
                {
                    "src": "icons/Icon-192.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Upload Product",
            "short_name": "Upload",
            "description": "Upload a new product",
            "url": "/upload?source=pwa",
            "icons": [
                {
                    "src": "icons/Icon-192.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Messages",
            "short_name": "Chat",
            "description": "View your messages",
            "url": "/chat?source=pwa",
            "icons": [
                {
                    "src": "icons/Icon-192.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Orders",
            "short_name": "Orders",
            "description": "Track your orders",
            "url": "/orders?source=pwa",
            "icons": [
                {
                    "src": "icons/Icon-192.png",
                    "sizes": "192x192"
                }
            ]
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "images",
                    "accept": ["image/*"]
                }
            ]
        }
    },
    "protocol_handlers": [
        {
            "protocol": "web+marketplace",
            "url": "/?protocol=%s"
        }
    ]
}