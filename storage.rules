rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // KYC uploads: restrict to owner-only access
    match /kyc_uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload images
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload store images
    match /store_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload chat images
    match /chat_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 